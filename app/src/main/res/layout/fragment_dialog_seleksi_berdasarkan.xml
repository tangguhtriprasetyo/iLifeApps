<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="24dp"
        android:paddingEnd="24dp"
        android:paddingStart="16dp"
        android:background="@color/colorBackground"
        tools:context=".ui.listmitra.listshop.dialogseleksiberdasarkan.DialogSeleksiBerdasarkanFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingDefaultResource">

        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_close_24"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Seleksi Berdasarkan"
            android:textColor="@color/lines"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ic_close"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rg_sortBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/ic_close"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

            <RadioButton
                android:id="@+id/rb_popularitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Popularitas"
                android:textColor="@color/font_default"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_jarak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Jarah Dekat ke Jauh"
                android:textColor="@color/font_default"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Rating Tinggi ke Rendah"
                android:textColor="@color/font_default"
                android:textSize="16sp" />

        </RadioGroup>




    </androidx.constraintlayout.widget.ConstraintLayout>