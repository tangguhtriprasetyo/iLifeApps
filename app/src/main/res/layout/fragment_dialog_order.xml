<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingVertical="32dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".ui.listmitra.listshop.detailshop.dialogorder.DialogOrderFragment"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Tentukan waktu pesanan anda"
        android:textColor="@color/font_default"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/rg_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_atur_jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto"
            android:paddingStart="8dp"
            android:text="Atur Jadwal"
            android:textColor="@color/font_default"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_pesan_sekarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto"
            android:paddingStart="8dp"
            android:text="Pesan Sekarang"
            android:textColor="@color/font_default"
            android:textSize="16sp" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pilih_jadwal"
        style="@style/ButtonStyle"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_blue"
        android:text="Pilih"
        android:textSize="16sp" />


</LinearLayout>